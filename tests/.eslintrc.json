{
  "extends": "airbnb",
  "rules": {
    "linebreak-style": 0,
    "comma-dangle": [2,"always-multiline"],
    "max-len": [2, 120],
    "indent": [2, 4, {"SwitchCase": 1, "VariableDeclarator": 1, "outerIIFEBody": 1}],
    "no-restricted-syntax": [2, "DebuggerStatement", "LabeledStatement", "WithStatement"],
    "no-underscore-dangle": ["error", { "allow": ["_this", "_width", "_height", "_instance", "_premium"] }],
    "no-plusplus": [0],
    "func-names": [0],
    "react/jsx-indent": [2, 4],
    "react/jsx-indent-props": [2, 4],
    "react/jsx-filename-extension": [2, { "extensions": [".jsx", ".js"] }]
  },
  "globals": {
    "Backbone": false,
    "_": false,
    "$": false
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
